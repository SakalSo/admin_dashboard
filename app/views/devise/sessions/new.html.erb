<div class="container">
    <div class="card card-login mx-auto mt-5">
      <div class="card-header">Login</div>
      <div class="card-body">
        <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.text_field :login, autofocus: true, autocomplete: "email", placeholder: "Username or Email",class: "form-control", id: "inputEmail" %>
              <label for="inputEmail">Email address</label>
            </div>
          </div>
          <div class="form-group">
            <div class="form-label-group">
              <%= f.password_field :password, autocomplete: "current-password", placeholder: "password", class: "form-control",id: "inputPassword" %>
              <label for="inputPassword">Password</label>
            </div>
          </div>
          <div class="form-group">
            <div class="checkbox">
              <% if devise_mapping.rememberable? %>
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me %>
              <% end %>
            </div>
          </div>
          <%= f.submit "Log in", class: "btn btn-primary btn-block" %>
        <%end%>
      </div>
    </div>
  </div>
